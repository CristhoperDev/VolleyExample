<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/internationalitems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackgroundBorderless"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/imagentsunami"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/localizaciontsunami" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imagentsunami"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:alpha="0.7"
            android:background="#5c1b1b1b"
            android:padding="2dp"
            android:text="TEMBLORES" />

        <TextView
            android:id="@+id/txtplace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagentsunami"
            android:layout_marginTop="10dp"
            android:text="LUGAR :"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtplace"
            android:text="HORA :"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtmagnitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txttime"
            android:text="MAGNITUD :"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtevaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtmagnitude"
            android:text="EVALUACION :"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtevaluation"
            android:text="REPORTE :"
            android:textColor="#000000"
            android:textSize="18sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
